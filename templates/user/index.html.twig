{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Sid</th>
                <th>OpenId</th>
                <th>UnionId</th>
                <th>JingdongId</th>
                <th>Grade</th>
                <th>CreatedAt</th>
                <th>LastLogin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.sid }}</td>
                <td>{{ user.openId }}</td>
                <td>{{ user.unionId }}</td>
                <td>{{ user.jingdongId }}</td>
                <td>{{ user.grade }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'sid': user.sid}) }}">show</a>
                    <a href="{{ path('user_edit', {'sid': user.sid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
