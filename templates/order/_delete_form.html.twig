<form method="post" action="{{ path('order_delete', {'sid': order.sid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.sid) }}">
    <button class="btn">Delete</button>
</form>
