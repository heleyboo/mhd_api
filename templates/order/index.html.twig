{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Sid</th>
                <th>UserId</th>
                <th>SubmissionTime</th>
                <th>TotalSum</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.sid }}</td>
                <td>{{ order.userId }}</td>
                <td>{{ order.submissionTime ? order.submissionTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.totalSum }}</td>
                <td>
                    <a href="{{ path('order_show', {'sid': order.sid}) }}">show</a>
                    <a href="{{ path('order_edit', {'sid': order.sid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
