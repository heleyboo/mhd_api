{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Sid</th>
                <td>{{ booking.sid }}</td>
            </tr>
            <tr>
                <th>BookedBy</th>
                <td>{{ booking.bookedBy }}</td>
            </tr>
            <tr>
                <th>EventId</th>
                <td>{{ booking.eventId }}</td>
            </tr>
            <tr>
                <th>BookedFor</th>
                <td>{{ booking.bookedFor }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ booking.status }}</td>
            </tr>
            <tr>
                <th>Deposit</th>
                <td>{{ booking.deposit }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ booking.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ booking.name }}</td>
            </tr>
            <tr>
                <th>GuestNumber</th>
                <td>{{ booking.guestNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'sid': booking.sid}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
