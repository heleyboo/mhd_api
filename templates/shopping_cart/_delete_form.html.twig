<form method="post" action="{{ path('shopping_cart_delete', {'sid': shopping_cart.sid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_cart.sid) }}">
    <button class="btn">Delete</button>
</form>
